<?xml version="1.0" encoding="utf-8"?>
<love.lxy.hbk.hl.MyView.HeartClickLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/love_time_heart_clicked_layout"
    tools:context="love.lxy.hbk.hl.Activity.LoveTimeActivity">

    <love.lxy.hbk.hl.MyView.HeartPathView
        android:id="@+id/love_time_heart_path_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"/>

    <love.lxy.hbk.hl.MyView.HeartView
        android:id="@+id/love_time_heart_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/love_time_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="心动的感觉"
        android:textColor="@color/myColor"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/love_time_title_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/love"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/love_time_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:text="2017年11月18日"
        android:textColor="@color/DeepOrange"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/love_time_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:text="2017年11月18日\n我们在一起了"
        android:textColor="@color/DeepOrange"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/love_time_love_you_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="我爱你，刘香玉"
            android:textColor="@color/DeepPink"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/love_time_year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/DeepPink"
                android:textSize="50sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="年"
                android:textColor="@color/DeepPink"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/love_time_month_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="11"
                android:textColor="@color/DeepPink"
                android:textSize="50sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/month_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="月"
                android:textColor="@color/DeepPink"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/love_time_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="11"
                android:textColor="@color/DeepPink"
                android:textSize="50sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="天"
                android:textColor="@color/DeepPink"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/love_time_hour_minute_sec_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:text="12小时30分钟30秒"
            android:textColor="@color/DeepPink"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/love_time_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:layout_marginBottom="110dp"
        android:text="直到时间静止\n也不和你分开"
        android:textColor="@color/DeepOrange"
        android:textSize="30sp"/>

</love.lxy.hbk.hl.MyView.HeartClickLayout>
