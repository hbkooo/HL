<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="love.lxy.hbk.hl.Activity.AddLoveProcessActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/add_process_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2019年8月7日"/>

            <EditText
                android:id="@+id/add_process_title_et"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_border_bg"
                android:gravity="top"
                android:hint="输入标题"
                android:lines="3"
                android:padding="7dp" />

            <EditText
                android:id="@+id/add_process_content_et"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_border_bg"
                android:gravity="top"
                android:hint="输入咱们共同的历程吧"
                android:lines="10"
                android:padding="7dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/add_process_activity_iv1"
                        android:layout_width="100dp"
                        android:layout_height="160dp"
                        android:scaleType="fitXY"/>

                    <ImageView
                        android:id="@+id/add_process_activity_iv2"
                        android:layout_width="100dp"
                        android:layout_height="160dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/add_hint_iv1"
                        android:layout_width="100dp"
                        android:layout_height="160dp"
                        android:padding="25dp"
                        android:background="@drawable/dash_border_bg"
                        android:src="@drawable/add_img" />

                    <ImageView
                        android:id="@+id/add_hint_iv2"
                        android:layout_width="100dp"
                        android:layout_height="160dp"
                        android:padding="25dp"
                        android:background="@drawable/dash_border_bg"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/add_img" />
                </LinearLayout>

            </FrameLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/add_love_process_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/login_btn_bg"
        android:text="添加"
        android:textColor="@drawable/login_btn_textcolor"
        android:textSize="20sp" />

</RelativeLayout>
