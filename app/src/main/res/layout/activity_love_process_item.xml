<?xml version="1.0" encoding="utf-8"?>
<love.lxy.hbk.hl.MyView.HeartClickLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/love_process_item_heart_click_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="love.lxy.hbk.hl.Activity.LoveProcessItemActivity">

    <LinearLayout
        android:id="@+id/love_process_item_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Pink">

        <ImageView
            android:id="@+id/love_process_item_activity_save_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/save"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right">
            <ImageView
                android:id="@+id/love_process_item_activity_delete_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/delete" />

            <ImageView
                android:id="@+id/love_process_item_activity_change_iv"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/change1" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/love_process_item_activity_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:text="2017年11月18日" />

        <EditText
            android:id="@+id/love_process_item_activity_title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/myColor"
            android:text="123"
            android:enabled="false"
            android:background="@null"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/love_process_item_activity_iv1"
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:src="@drawable/ours" />

            <ImageView
                android:id="@+id/love_process_item_activity_iv2"
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ours1" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/love_process_item_activity_content_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="test"
                    android:background="@null"
                    android:enabled="false"
                    android:textColor="@color/myColor"
                    android:textSize="18sp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</love.lxy.hbk.hl.MyView.HeartClickLayout>
