<?xml version="1.0" encoding="utf-8"?>
<love.lxy.hbk.hl.MyView.HeartClickLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/love_test_heart_click_layout"
    tools:context="love.lxy.hbk.hl.Activity.LoveTest.LoveTestActivity"
    android:orientation="vertical">

    <love.lxy.hbk.hl.MyView.HeartView
        android:id="@+id/love_test_heart_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/love_test1_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/love_test1_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dark_heart"/>

            <TextView
                android:id="@+id/love_test1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textSize="26sp"
                android:text="你爱我吗？"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/love_test2_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/love_test2_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dark_heart"/>

            <TextView
                android:id="@+id/love_test2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textSize="26sp"
                android:text="爱情测试"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/love_test3_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/love_test3_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dark_heart"/>

            <TextView
                android:id="@+id/love_test3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textSize="26sp"
                android:text="守护今生"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>

</love.lxy.hbk.hl.MyView.HeartClickLayout>
