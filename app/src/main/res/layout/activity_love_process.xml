<?xml version="1.0" encoding="utf-8"?>
<love.lxy.hbk.hl.MyView.HeartClickLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/love_process_heart_click_layout"
    android:layout_height="match_parent"
    android:background="@color/myWhite"
    tools:context="love.lxy.hbk.hl.Activity.LoveProcessActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/love_process_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5dp"
            android:text="我们的遇见，是爱情的开始\n我们的爱情，是幸福的开始"
            android:textColor="@color/myColor"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="8dp"
            android:background="@color/myColor" />

        <TextView
            android:id="@+id/love_process_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="❤  2017-11-18  ❤"
            android:textColor="@color/myColor"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/boy1" />

            <TextView
                android:id="@+id/love_process_and_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="and"
                android:textColor="@color/myColor"
                android:textSize="30sp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/girl1" />
        </LinearLayout>

        <TextView
            android:id="@+id/love_process_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="我们的爱情历程"
            android:textColor="@color/myColor"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="8dp"
            android:background="@color/myColor" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/love_process_recycle_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_marginBottom="2dp">

            </android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/love_process_love_you_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6dp"
                android:layout_marginHorizontal="6dp"
                android:text="我们的海誓山盟"
                android:textSize="20sp"
                android:background="@drawable/login_btn_bg"
                android:textColor="@drawable/login_btn_textcolor" />
        </FrameLayout>


    </LinearLayout>


    <love.lxy.hbk.hl.MyView.HeartView
        android:id="@+id/love_process_heart_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/love_process_add_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/add"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="30dp"
        android:elevation="8dp"
        android:clickable="true" />

</love.lxy.hbk.hl.MyView.HeartClickLayout>
