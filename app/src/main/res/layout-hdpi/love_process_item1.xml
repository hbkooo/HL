<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/process_item_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/DeepOrange" />

            <TextView
                android:id="@+id/process_item_node_tv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_tv_bg"
                android:gravity="center"
                android:text="❤"
                android:textColor="@color/myWhite" />
        </FrameLayout>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/left" />

        <LinearLayout
            android:id="@+id/process_item_description_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/corner_bg"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_dp"
                android:layout_marginRight="@dimen/margin_dp"
                android:layout_marginTop="@dimen/margin_dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/process_item_description_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/process3" />

                <TextView
                    android:id="@+id/process_item_description_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="即使有一天你的步履变得蹒跚，"
                    android:textColor="@color/HotPink"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/process_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/margin_dp"
                android:layout_marginEnd="@dimen/margin_dp"
                android:layout_marginRight="@dimen/margin_dp"
                android:layout_marginTop="6dp"
                android:text="2017年11月18日"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/process_item_no_over_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="@color/myColor"
        android:text="未完待续..."/>


</FrameLayout>